<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Status">
   <children>
      <TextArea fx:id="statusTxt" layoutX="41.0" layoutY="41.0" prefHeight="317.0" prefWidth="286.0" promptText="Let your accquaintance know what are you doing right now..." />
      <ImageView fx:id="plusImg" fitHeight="150.0" fitWidth="200.0" layoutX="419.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@1200px-Plus_symbol.svg.png" />
         </image>
      </ImageView>
      <Button fx:id="uploadBtn" layoutX="434.0" layoutY="217.0" mnemonicParsing="false" onAction="#imageUploaderOnClicked" prefHeight="26.0" prefWidth="96.0" text="Upload Image" />
      <Button fx:id="backBtn" layoutX="41.0" layoutY="2.0" mnemonicParsing="false" onAction="#backOnClicked" text="Back" />
      <Button fx:id="postBtn" layoutX="434.0" layoutY="264.0" mnemonicParsing="false" onAction="#postOnClicked" prefHeight="26.0" prefWidth="96.0" text="Post" />
      <ImageView fx:id="imageUploader" fitHeight="150.0" fitWidth="200.0" layoutX="382.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
